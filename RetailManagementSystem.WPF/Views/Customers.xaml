<UserControl x:Class="RetailManagementSystem.WPF.Views.Customers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:RetailManagementSystem.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="622" d:DesignWidth="600"
             Style="{StaticResource Page_Style}">
   
    <Grid>
        <Border CornerRadius="0,20,20,0">
            <Border.Background>
                <ImageBrush ImageSource="/Images/customer_page.png" Stretch="None"/>
            </Border.Background>
        </Border>

        <TextBlock Text="Customer ID :"
                   Foreground="#DBDBDB"
                   FontSize="12"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="80,154,0,0"/>

        <TextBlock Text="{Binding CustomerID}"
            Foreground="#CED565"
            FontSize="12"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="175,154,0,0"/>
    </Grid>
</UserControl>
