<UserControl x:Class="RetailManagementSystem.WPF.Views.Products"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:RetailManagementSystem.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600"
             d:DesignWidth="622"
             Style="{StaticResource Page_Style}"
             >

   
    <Grid>
        <Border CornerRadius="0,20,20,0">
            <Border.Background>
                <ImageBrush ImageSource="/Images/product_page.png" 
                            Stretch="None"/>
            </Border.Background>
            
        </Border>

        <TextBlock Text="{Binding ProductAvailability}"
                   Foreground="#F25E68"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="276,300,0,0"/>
    </Grid>
</UserControl>
