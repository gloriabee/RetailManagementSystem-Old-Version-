<Window x:Class="RetailManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:RetailManagementSystem.ViewModels"
        xmlns:Menu="clr-namespace:RetailManagementSystem.Utils"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Retail Management System"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource MaterialDesignWindow}"
        Background="Transparent">

    <Window.DataContext>
        <vm:NavigationVM/>
    </Window.DataContext>

    <Grid>
        <!-- Background Border -->
        <Border Background="#212529" CornerRadius="20"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ✅ Sidebar -->
            <Border Grid.Column="0"
                    Background="#131B2F"
                    CornerRadius="20,0,0,20"
                    Padding="0,40,0,0">

                <StackPanel>
                    <!-- Logo -->
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="20,0,0,40">
                        <materialDesign:PackIcon Kind="ShoppingOutline"
                                                 Width="40" Height="40"
                                                 Foreground="#00C3FF"
                                                 VerticalAlignment="Center"/>
                        <StackPanel Margin="10,0,0,0">
                            <TextBlock Text="Retail"
                                       FontWeight="Bold"
                                       FontSize="18"
                                       Foreground="White"/>
                            <TextBlock Text="Data Management"
                                       FontSize="12"
                                       Foreground="White"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- 🏠 Navigation Buttons -->
                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding HomeCommand}"
                              IsChecked="True"
                              Margin="0,5">
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                            <materialDesign:PackIcon Kind="HomeOutline"
                                                     Width="22" Height="22"
                                                     VerticalAlignment="Center"
                                                     Foreground="White"/>
                            <TextBlock Text="Home"
                                       Foreground="White"
                                       Margin="15,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Menu:Btn>

                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding CustomersCommand}"
                              Margin="0,5">
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                            <materialDesign:PackIcon Kind="AccountOutline"
                                                     Width="22" Height="22"
                                                     VerticalAlignment="Center"
                                                     Foreground="White"/>
                            <TextBlock Text="Customers"
                                       Foreground="White"
                                       Margin="15,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Menu:Btn>

                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding ProductsCommand}"
                              Margin="0,5">
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                            <materialDesign:PackIcon Kind="ArchiveOutline"
                                                     Width="22" Height="22"
                                                     VerticalAlignment="Center"
                                                     Foreground="White"/>
                            <TextBlock Text="Products"
                                       Foreground="White"
                                       Margin="15,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Menu:Btn>

                    <Menu:Btn Style="{StaticResource BtnStyle}"
                              Command="{Binding OrdersCommand}"
                              Margin="0,5">
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                            <materialDesign:PackIcon Kind="InvoiceListOutline"
                                                     Width="22" Height="22"
                                                     VerticalAlignment="Center"
                                                     Foreground="White"/>
                            <TextBlock Text="Orders"
                                       Foreground="White"
                                       Margin="15,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Menu:Btn>
                </StackPanel>
            </Border>

            <!-- ✅ Main Content -->
            <Grid Grid.Column="1" Background="White" Margin="0,0,0,0">
                <ContentControl Content="{Binding CurrentView}"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
