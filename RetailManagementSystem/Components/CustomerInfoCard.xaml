<UserControl x:Class="RetailManagementSystem.Components.CustomerInfoCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RetailManagementSystem.Components"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"  
             d:Height="200"
             >
    <Grid>

        <materialDesign:Card
         UniformCornerRadius="10"
         Width="360"
         Padding="20"
         Background="#ffffff"
         Foreground="{DynamicResource PrimaryHueDarkForegroundBrush}" Grid.ColumnSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
               Height="Auto" />
                    <RowDefinition
               Height="Auto" />
                    <RowDefinition
               Height="Auto" />
                </Grid.RowDefinitions>
                <TextBlock
             Grid.Row="0"
             FontWeight="Bold"
             Style="{StaticResource MaterialDesignHeadline6TextBlock}"
             Text="Customer Information" />
                <Separator
             Grid.Row="1"
             Style="{StaticResource MaterialDesignLightSeparator}" />

                <StackPanel Grid.Row="2">
                    <!-- Name: -->
                    <UniformGrid Columns="2" Rows="2" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <TextBlock
               HorizontalAlignment="Left"
               FontWeight="Bold"
               Style="{StaticResource MaterialDesignBody2TextBlock}"
               Text="Name:"       
               Margin="0,0,10,0"/>
                        <TextBlock
               Style="{StaticResource MaterialDesignBody2TextBlock}"
               Text="#CM9801" />

                        <!-- Email: -->
                        <TextBlock
               HorizontalAlignment="Left"
              FontWeight="Bold"
               Style="{StaticResource MaterialDesignBody2TextBlock}"
               Text="Email:"
               Margin="0,5,10,0"/>

                        <TextBlock
               HorizontalAlignment="Left"
               Style="{StaticResource MaterialDesignBody2TextBlock}"
               Text="Feb 2, 2025 2:30 PM" />


                        <!-- Email: -->
                        <TextBlock
               HorizontalAlignment="Left" FontWeight="Bold"
               Style="{StaticResource MaterialDesignBody2TextBlock}"
               Text="Phone:"
               Margin="0,5,10,0"/>

                        <TextBlock
               HorizontalAlignment="Left"
               Style="{StaticResource MaterialDesignBody2TextBlock}"
               Text="Feb 2, 2025 2:30 PM" />

                        <!--Address-->
                        <TextBlock
               HorizontalAlignment="Left"
             FontWeight="Bold"
               Style="{StaticResource MaterialDesignBody2TextBlock}"
               Text="Address:"
               Margin="0,5,10,0"/>

                        <TextBlock
               HorizontalAlignment="Left"
               Style="{StaticResource MaterialDesignBody2TextBlock}"
               Text="Feb 2, 2025 2:30 PM" />

                        <!-- Country -->
                        <TextBlock
                HorizontalAlignment="Left"
                 FontWeight="Bold"
                Style="{StaticResource MaterialDesignBody2TextBlock}"
                Text="Country:"
                Margin="0,5,10,0"/>

                        <TextBlock
                HorizontalAlignment="Left"
                Style="{StaticResource MaterialDesignBody2TextBlock}"
                Text="Feb 2, 2025 2:30 PM" />

                    </UniformGrid>
                </StackPanel>

            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
