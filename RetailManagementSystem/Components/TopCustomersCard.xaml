<UserControl x:Class="RetailManagementSystem.Components.TopCustomersCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RetailManagementSystem.Components"
              xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
              >

    <Grid>
        <materialDesign:Card
     UniformCornerRadius="10"
     Width="500"
     Padding="20"
     Background="White"
     >

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Header -->
                    <RowDefinition Height="Auto"/>
                    <!-- Top Border -->
                    <RowDefinition Height="*"/>
                    <!-- Product List -->
                    <RowDefinition Height="Auto"/>
                    <!-- Bottom Border -->
                    <RowDefinition Height="Auto"/>
                    <!-- Footer -->
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0"
                    Text="Top 5 Customers"
                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                    FontWeight="Bold"
                    Margin="0,0,0,10" Grid.ColumnSpan="2"/>

                <!-- Top Border -->
                <Border Grid.Row="1"
                 BorderBrush="{DynamicResource MaterialDesignDivider}"
                 BorderThickness="0,1,0,0"
                 Margin="0,5,0,5" Grid.ColumnSpan="2"/>

                <!-- Product List -->
                <ListView Grid.Row="2"
                   ItemsSource="{Binding TopCustomers,RelativeSource={RelativeSource AncestorType=UserControl}}"
                   BorderThickness="0"
                   Background="Transparent"
                   Margin="0,5,0,5" 
                  >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Header="Total Orders" DisplayMemberBinding="{Binding TotalOrders}"/>
                            <GridViewColumn Header="Total Spent" DisplayMemberBinding="{Binding TotalSpent}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
