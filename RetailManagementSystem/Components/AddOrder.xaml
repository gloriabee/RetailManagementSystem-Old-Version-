<Window x:Class="RetailManagementSystem.Components.AddOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RetailManagementSystem.Components"
        mc:Ignorable="d"
        Title="AddOrder" Height="550" Width="800">
    <Grid Margin="20,20,20,20">
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <TextBlock
             Grid.Row="0"
            Style="{StaticResource MaterialDesignHeadline6TextBlock}"
            Text="Customer Information" Grid.ColumnSpan="2"/>


        <Grid Grid.ColumnSpan="2" Margin="0,72,0,72" Grid.RowSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--
            -->
            <StackPanel Grid.Column="0" Margin="0 0 10 0">
                <TextBlock Text="Customer ID *" FontWeight="SemiBold"/>
                <ComboBox
                      MinWidth="72"
                      ItemsSource="{Binding LongIntegerList}"
                      SelectedValue="{Binding SelectedValueOne}">
                    <ComboBox.SelectedItem>
                        <Binding
                              Mode="TwoWay"
                              Path="SelectedValueOne"
                              UpdateSourceTrigger="PropertyChanged">
                        </Binding>
                    </ComboBox.SelectedItem>
                </ComboBox>
            </StackPanel>


            <!--Customer Name -->
            <StackPanel Grid.Column="1" Margin="0 0 10 0">
                <TextBlock Text="Customer Name" FontWeight="SemiBold"/>
                <TextBox
                  Margin="0,0,0,0"
                  VerticalAlignment="Bottom"
                  Text="{Binding Name}" />
            </StackPanel>
        </Grid>


        <!--Product Description and Quantity-->
        <TextBlock
    Grid.Row="2"
   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
   Text="Product Information" Grid.ColumnSpan="2"/>


        <Grid Grid.Row="2" Grid.ColumnSpan="2" Margin="0,72,0,0" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Product ID -->
            <StackPanel Grid.Column="0" Margin="0 0 10 0">
                <TextBlock Text="Product ID *" FontWeight="SemiBold"/>
                <ComboBox
              MinWidth="72"
              ItemsSource="{Binding LongIntegerList}"
              SelectedValue="{Binding SelectedValueOne}">
                    <ComboBox.SelectedItem>
                        <Binding
                      Mode="TwoWay"
                      Path="SelectedValueOne"
                      UpdateSourceTrigger="PropertyChanged">
                        </Binding>
                    </ComboBox.SelectedItem>
                </ComboBox>
            </StackPanel>


            <!--Product Name -->
            <StackPanel Grid.Column="1" Margin="0 0 10 0">
                <TextBlock Text="Product Name *" FontWeight="SemiBold"/>
                <TextBox
                    Margin="0,0,0,0"
                    VerticalAlignment="Bottom"
                    Text="{Binding Name}" />
            </StackPanel>


            <!--Quantity -->
            <StackPanel Grid.Column="2" Margin="0 0 10 0">
                <TextBlock Text="Quantity *" FontWeight="SemiBold"/>
                <ComboBox
                   MinWidth="72"
                   ItemsSource="{Binding LongIntegerList}"
                   SelectedValue="{Binding SelectedValueOne}">
                    <ComboBox.SelectedItem>
                        <Binding
                   Mode="TwoWay"
                   Path="SelectedValueOne"
                   UpdateSourceTrigger="PropertyChanged">
                        </Binding>
                    </ComboBox.SelectedItem>
                </ComboBox>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="3" Grid.ColumnSpan="2" Margin="0,72,0,72" Grid.RowSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Unit Price -->
            <StackPanel Grid.Column="0" Margin="0 0 10 0">
                <TextBlock Text="Unit Price" FontWeight="SemiBold"/>
                <TextBox
                   Margin="0,0,0,0"
                   VerticalAlignment="Bottom"
                   Text="{Binding UnitPrice}" />
            </StackPanel>


            <!--Total -->
            <StackPanel Grid.Column="1" Margin="0 0 10 0">
                <TextBlock Text="Total" FontWeight="SemiBold"/>
                <TextBox
                   Margin="0,0,0,0"
                   VerticalAlignment="Bottom"
                   Text="{Binding Total}" />
            </StackPanel>

        </Grid>

        <!-- New Product Button -->
        <Button Style="{StaticResource MaterialDesignOutlinedLightButton}"
                Grid.Row="5" 
                HorizontalAlignment="Center"
                Content="Add New Product" 
        />
        
        <!-- Submit Button-->
        <Button Style="{StaticResource MaterialDesignRaisedButton}"
        Grid.Row="6" 
        HorizontalAlignment="Center"
        Content="Add Order" 
/>
        
    </Grid>
</Window>
