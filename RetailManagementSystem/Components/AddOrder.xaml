<Window x:Class="RetailManagementSystem.Components.AddOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns:local="clr-namespace:RetailManagementSystem.Components"
        xmlns:vm="clr-namespace:RetailManagementSystem.ViewModels"
        mc:Ignorable="d"
        Title="AddOrder" Height="550" Width="800">
    <Grid Margin="20,20,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 🧍 Customer Info -->
        <GroupBox Header="Customer Information" Grid.Row="0" Margin="0 0 0 15">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Customer ID *" FontWeight="SemiBold"/>
                    <ComboBox ItemsSource="{Binding CustomerIds}"
                              SelectedValue="{Binding SelectedCustomerId, Mode=TwoWay}"
                              />
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="20 0 0 0">
                    <TextBlock Text="Customer Name" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding SelectedCustomerName}" IsReadOnly="True" />
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 📦 Product Section -->
        <GroupBox 
            Header="Product Information" 
            Margin="0 0 0 15"
            Grid.Row="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding ProductEntries}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 🔹 Product Info (top row) -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Product ID -->
                                    <StackPanel Grid.Column="0" Margin="0 0 10 0">
                                        <TextBlock Text="Product ID *" FontWeight="SemiBold"/>
                                        <ComboBox ItemsSource="{Binding ProductIds}"
                                                SelectedValue="{Binding SelectedProductId, Mode=TwoWay}"
                                        /> 
                                    </StackPanel>

                                    <!-- Product Name -->
                                    <StackPanel Grid.Column="1" Margin="0 0 10 0">
                                        <TextBlock Text="Product Name *" FontWeight="SemiBold"/>
                                        <TextBox Text="{Binding SelectedProductName}" IsReadOnly="True"/>
                                    </StackPanel>

                                    <!-- Quantity -->
                                    <StackPanel Grid.Column="2" Margin="0 0 10 0">
                                        <TextBlock Text="Quantity *" FontWeight="SemiBold"/>
                                        <materialDesign:NumericUpDown 
                                            Value="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Minimum="1"
                                            Maximum="100"/>
                                    </StackPanel>
                                </Grid>

                                <!-- 🔹 Price Info (bottom row) -->
                                <Grid Grid.Row="1" Margin="0 15 0 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0 0 10 0">
                                        <TextBlock Text="Unit Price" FontWeight="SemiBold"/>
                                        <TextBox Text="{Binding SelectedProductUnitPrice}" IsReadOnly="True"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Total" FontWeight="SemiBold"/>
                                        <TextBox Text="{Binding Total, Mode=OneWay}" IsReadOnly="True" />
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
              
            </ScrollViewer>
          
        </GroupBox>


        <!-- ➕ Add New Product Inline -->
        <Button Grid.Row="2"
                HorizontalAlignment="Center"
                Margin="0 10"
                Width="150"
                Height="36"
                Content="Add New Product"
                Command="{Binding AddProductCommand}"
                />

        <!-- 💾 Add Order -->
        <Button Grid.Row="3"
                HorizontalAlignment="Center"
                Width="150"
                Height="36"
                Margin="0 10 0 0"
                Content="Add Order"
               />
    </Grid>
</Window>
