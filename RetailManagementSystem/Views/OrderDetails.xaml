<UserControl x:Class="RetailManagementSystem.Views.OrderDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RetailManagementSystem.Views"
             xmlns:vm="clr-namespace:RetailManagementSystem.ViewModels"
             xmlns:components="clr-namespace:RetailManagementSystem.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             >
            
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="20,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left section -->
            <StackPanel Grid.Column="0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Order Id: " Style="{StaticResource MaterialDesignHeadline6TextBlock}" Foreground="#111"/>
                    <TextBlock Text="{Binding Order.OrderId}" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Foreground="#111" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Created on: " Style="{StaticResource MaterialDesignBody2TextBlock}" Foreground="#111"/>
                    <TextBlock Text="{Binding Order.OrderDate}" Style="{StaticResource MaterialDesignBody2TextBlock}" Foreground="#111"/>
                </StackPanel>

            </StackPanel>
            

        </Grid>

        <StackPanel 
            Grid.Row="1"
            Orientation="Horizontal" 
            HorizontalAlignment="Center"
            Margin="0,0,10,0">
            <components:OrderInfoCard 
                OrderId="{Binding Order.OrderId}"
                OrderDate="{Binding Order.OrderDate}"
                Margin="0,10,10,10"/>
            
            <components:CustomerInfoCard 
                Margin="0,10,0,10"
                Height="196"
                CustomerName="{Binding Order.CustomerName}"
                CustomerEmail="{Binding Order.Email}"
                CustomerPhone="{Binding Order.Phone}"
                CustomerAddress="{Binding Order.Address}"
                CustomerCountry="{Binding Order.Country}"/>
        </StackPanel>

        <components:BillSummaryCard Grid.Row="2" Margin="10,10,10,-63"/>


    </Grid>
</UserControl>
