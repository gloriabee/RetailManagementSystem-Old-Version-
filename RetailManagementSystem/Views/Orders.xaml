<UserControl x:Class="RetailManagementSystem.Views.Orders"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:components="clr-namespace:RetailManagementSystem.Components"
             xmlns:vm="clr-namespace:RetailManagementSystem.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <UserControl.DataContext>
        <vm:OrderVM/>
    </UserControl.DataContext>
    
    <Grid Margin="20,20,20,20">

        <Grid.RowDefinitions >
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>



        <!-- Header -->
        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left section -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Orders" FontSize="24" FontWeight="Bold" Foreground="#111" />
                <TextBlock Text="Create, Update and Delete Customer orders" FontSize="14" Foreground="Gray"/>
            </StackPanel>

            <!-- Right section -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Width="100" Height="35"
                        Margin="0,0,5,0"
                Command="{Binding ShowWindowCommand}"
                Style="{StaticResource MaterialDesignRaisedButton}"
                Background="#1F26B4"  
                Foreground="White"
            ToolTip="Add new item">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="PackageVariantClosedPlus" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="Add" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>


                <Button 
                    Grid.Column="1" 
                    Width="100" Height="35"
                    Foreground="White"
                    Background="#C24C52"
                 >
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <materialDesign:PackIcon Kind="TrashCanOutline" Width="20" Height="20" Margin="0,0,5,0"/>
                        <TextBlock Text="Delete" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

        </Grid>


        <!-- Datalist table -->
        <components:SearchBox 
            Margin="0,10,0,10"
            FilterText="{Binding FilterText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Grid.Row="1"
            materialDesign:HintAssist.Hint="Type ID or Customer to search"
            HorizontalAlignment="Right"/>

        <components:GridTable Grid.Row="2" ItemsSource="{Binding Orders}"/>

        <!-- Pagination footer -->
        <components:Pagination Grid.Row="3" Margin="0,10,0,0" DataContext="{Binding Pagination}"/>


    </Grid>
</UserControl>
