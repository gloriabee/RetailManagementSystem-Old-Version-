<UserControl x:Class="RetailManagementSystem.Views.Customers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:RetailManagementSystem.ViewModels"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             >

    <UserControl.DataContext>
        <vm:CustomerVM/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top controls -->
            <RowDefinition Height="*"/>
            <!-- DataGrid area -->
            <RowDefinition Height="Auto"/>
            <!-- Pagination -->
        </Grid.RowDefinitions>

        <!-- 🔹 Search + Add Button -->
        <DockPanel Margin="10,15,10,10" Grid.Row="0">
            <!--Search box-->
            <TextBox Width="220"
                     Height="35"
                     FontSize="12"
                     DockPanel.Dock="Left"
                     Margin="5,0,0,0"
                     Padding="8,0"
                     Background="#2C2F33"
                     Foreground="White"
                     BorderThickness="0"
                     Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                     />
            
            <!--Delete button -->

            <ui:Button Content="Delete Customer"
                       Background="Red"
                       Margin="10,0,0,0"
                       Height="35"
                       DockPanel.Dock="Right"
                       Icon="{ui:SymbolIcon Symbol=Delete12}"
                       Command="{Binding DeleteAllCommand}"/>

            <!--Add Customer-->
            <ui:Button Content="Add Customer"
                       Background="CadetBlue"
                       HorizontalAlignment="Right"
                       Width="140"
                       Height="35"
                       DockPanel.Dock="Right"
                       Icon="{ui:SymbolIcon Symbol=Add12}"
                       Command="{Binding ShowWindowCommand}"/>
            
            
        </DockPanel>

        <!-- 🔹 DataGrid Section -->
        <Border Grid.Row="1" Margin="10,0,10,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto">
                <DataGrid ItemsSource="{Binding MyCustomers}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="False"
                          HeadersVisibility="All"
                          RowHeight="45"
                          Background="Transparent"
                          Foreground="#212529"
                          BorderThickness="0"
                          HorizontalScrollBarVisibility="Auto"
                          >
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn 
                            CanUserResize="False" 
                            Width="auto"
                            Binding="{Binding IsSelected, Mode=TwoWay}">
                            <DataGridCheckBoxColumn.HeaderTemplate>
                                <DataTemplate>
                                    <CheckBox 
                                       x:Name="HeaderCheckBox"
                                        Checked="HeaderCheckBox_Checked"
                                        Unchecked="HeaderCheckBox_Unchecked"/>
                                </DataTemplate>
                            </DataGridCheckBoxColumn.HeaderTemplate>
                        </DataGridCheckBoxColumn>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" />
                        <DataGridTextColumn Header="Username" Binding="{Binding Username}" />
                        <DataGridTextColumn Header="Email" Binding="{Binding Email}" />
                        <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" />
                        <DataGridTextColumn Header="Address" Binding="{Binding Address}" />
                        <DataGridTextColumn Header="Country" Binding="{Binding Country}" />
                        <DataGridTemplateColumn Header= "Operations">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <ui:Button 
                                           Background="orange"
                                           HorizontalAlignment="Right"
                                           Width="35"
                                           Height="35"
                                           DockPanel.Dock="Right"
                                           Icon="{ui:SymbolIcon Symbol=Pen16}"
                                           Command="{Binding DataContext.UpdateCommand,RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>

                                        <ui:Button 
                                            Background="red"
                                            HorizontalAlignment="Right"
                                            Width="35"
                                            Height="35"
                                            DockPanel.Dock="Right"
                                            Icon="{ui:SymbolIcon Symbol=Delete12}"
                                            Command="{Binding DataContext.DeleteCommand,RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>

        <Grid Grid.Row="2" Margin="10,0,10,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal"
                 Grid.Column="2"
                 HorizontalAlignment="left"
                 VerticalAlignment="Center"
                 Margin="0,10,0,10">

                <TextBlock Foreground="White"
    Text="Rows per page:"
    VerticalAlignment="Center"
/>
                <ui:DropDownButton Content="{Binding PageSize}"
                        Width="70"
                        Margin="15,0,0,0"
                        HorizontalAlignment="Center">
                    <ui:DropDownButton.Flyout>
                        <ContextMenu>
                            <MenuItem Header="10" Command="{Binding ChangePageSizeCommand}" CommandParameter="10"/>
                            <MenuItem Header="25" Command="{Binding ChangePageSizeCommand}" CommandParameter="25"/>
                            <MenuItem Header="50" Command="{Binding ChangePageSizeCommand}" CommandParameter="50"/>
                            <MenuItem Header="100" Command="{Binding ChangePageSizeCommand}" CommandParameter="100"/>
                        </ContextMenu>
                    </ui:DropDownButton.Flyout>
                </ui:DropDownButton>

            </StackPanel>

            <StackPanel Orientation="Horizontal"
             Grid.Column="2"
             HorizontalAlignment="Right"
             VerticalAlignment="Center"
             Margin="0,10,0,10">

                <Button Content="&lt;&lt;"
             Command="{Binding FirstPageCommand}"
             Margin="5"
             Padding="10,5"
             ToolTip="first page"/>
                <Button Content="&lt;"
              Command="{Binding PrevPageCommand}"
              Margin="5"
              Padding="10,5"
             ToolTip="previous page"/>
                <TextBlock Foreground="White"
                Text="{Binding CurrentPage}"
                VerticalAlignment="Center"
                Margin="10,0"/>
                <TextBlock Foreground="White"
                Text="of"
                VerticalAlignment="Center"
                Margin="2,0"/>
                <TextBlock Foreground="White"
                Text="{Binding TotalPages}"
                VerticalAlignment="Center"/>
                <Button Content=">"
             Command="{Binding NextPageCommand}"
             Margin="5"
             Padding="10,5"
             ToolTip="next page"/>
                <Button Content=">>"
              Command="{Binding LastPageCommand}"
              Margin="5"
              Padding="10,5"
             ToolTip="Last page"
             />

               
            </StackPanel>
        </Grid>
        <!-- 🔹 Pagination Controls -->
       
    </Grid>
</UserControl>
