<UserControl x:Class="RetailManagementSystem.Views.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:RetailManagementSystem.Components"
             >
    <Grid Margin="20,20,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/> 
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="20,0,0,20">
            <TextBlock Text="Dashboard" FontSize="24" FontWeight="Bold" Foreground="#111" />
            <TextBlock Text="Overview" FontSize="14" Foreground="Gray"/>
        </StackPanel>

        <!-- Stats Cards -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,30" HorizontalAlignment="Stretch" VerticalAlignment="Top" >
            <components:StatsCard Title="Total&#x0a;Customers" Value="{Binding totalCustomers}" Icon="/Images/img_customer.png"/>
            <components:StatsCard Title="Total&#x0a;Products" Value="{Binding totalProducts}" Icon="/Images/img_product.png"/>
            <components:StatsCard Title="Total&#x0a;Orders" Value="{Binding totalOrders}" Icon="/Images/img_order.png"/>
            <components:StatsCard Title="Total&#x0a;Revenue" Value="{Binding totalRevenue,StringFormat=C}" Icon="/Images/img_transaction.png"/>
        </UniformGrid>

        <Grid Grid.Row="2" Margin="0,0,0,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <!-- Left side takes 2 parts -->
                <ColumnDefinition Width="1.5*"/>
                <!-- Right side takes 1.5 parts -->
            </Grid.ColumnDefinitions>

            <!-- Left panel -->
            <components:TopCategories/>

            <!-- Right panel -->
            <components:TopCustomersCard Grid.Column="1" 
                                         TopCustomers="{Binding TopCustomers}"
                                          />
        </Grid>

        <!--<Grid Grid.Row="3">
            <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="0,0,0,0" Padding="20">
                <TextBlock Text="Sales Trend" FontWeight="Bold"/>
            </Border>
        </Grid>-->
        


    </Grid>
</UserControl>
